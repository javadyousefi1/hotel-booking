generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password     String
  createdAt DateTime @default(now())
  role  String[] @default(["user"])
}

model Hotel {
  id        Int      @id @default(autoincrement())
  title     String
  desc      String
  images    String[] // Array of image paths
  createdAt DateTime @default(now())
}
